<div class="mt-2">
  <div class="row">
    <div class="col-xs-4">
        <%= simple_form_for([activity, review]) do |f| %>
          <%= f.input :content, placeholder: "Your comments" %>
          <%= f.input :rating, prompt: "Ratings", collection: (1..5).to_a, label: "Rate your experience", input_html: {data: { controller: "star-rating", action: "click->form-submit#submit"} }  %>
          <div class="text-center">
            <%= f.submit "Submit", class:"btn btn-primary btn-action text-center" %>
          </div>
        <% end %>
    </div>
  </div>
</div>
