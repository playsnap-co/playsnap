div class="container">
  <div class="row">
    <div class="col-xs-12.col-sm-3.col-sm-offset-4">
      <div class="form-sign-in">

        <h4>Independent play activities with ANYTHING you have on hand, in a snap!</h4>

          <label for="objectToSearch" class="form-label">I have:</label>
          <%= form_with url: activities_path, method: :get, html: {class:
                    "mb-4"} do |f| %>
          <%= f.text_field :query,
                          class: "form-control",
                          placeholder: "object" %>
          <br>
          <label for="ageRange" class="form-label">for:</label>
          <br>
            <%= f.select :age, ["0-12 mths", "12-18 mths", "18-24mths", "24-36mths"] %>

          <br>
          <label for="category" class="form-label">to develop:</label>
          <br>
          <%= f.select :age, ["Gross motor", "Fine Physical", "Emotional", "Cognitive"] %>
          <br>
          <br>
             <div class="form-actions text-center">
              <%= f.button "Search", class:"btn btn-primary btn-action"%>
            </div>
            <% end %>
      </div>
    </div>
  </div>
</div>
